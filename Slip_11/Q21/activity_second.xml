<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_marginLeft="20dp">

    <TableRow
        android:layout_gravity="center">

        <TextView
            android:text="Name      : "
            android:textSize="30sp"
            android:layout_weight="1"
            />

        <TextView
            android:text="Vishwanath"
            android:textSize="30sp"
            android:layout_weight="1"
            android:id="@+id/name"/>

    </TableRow>

    <TableRow
        android:layout_gravity="center">

        <TextView
            android:text="Surname : "
            android:textSize="30sp"
            android:layout_weight="1"
            />

        <TextView
            android:text="Shinde"
            android:textSize="30sp"
            android:layout_weight="1"
            android:id="@+id/surname"/>

    </TableRow>

    <TableRow
        android:layout_gravity="center">

        <TextView
            android:text="Class       : "
            android:textSize="30sp"
            android:layout_weight="1"
            />

        <TextView
            android:text="Tybca"
            android:textSize="30sp"
            android:layout_weight="1"
            android:id="@+id/clas"/>

    </TableRow>


    <TableRow
        android:layout_gravity="center">

        <TextView
            android:text="Gender    : "
            android:textSize="30sp"
            android:layout_weight="1"
            />

        <TextView
            android:text="Male"
            android:textSize="30sp"
            android:layout_weight="1"
            android:id="@+id/gender"/>

    </TableRow>


    <TableRow
        android:layout_gravity="center">

        <TextView
            android:text="Hobbies  : "
            android:textSize="30sp"
            android:layout_weight="1"
            />

        <TextView
            android:text="Cricket"
            android:textSize="30sp"
            android:layout_weight="1"
            android:id="@+id/hobbies"/>

    </TableRow>


    <TableRow
        android:layout_gravity="center">

        <TextView
            android:text="Marks      : "
            android:textSize="30sp"
            android:layout_weight="1"
            />

        <TextView
            android:text="99.99"
            android:textSize="30sp"
            android:layout_weight="1"
            android:id="@+id/marks"/>

    </TableRow>


</TableLayout>